	private static Texture[] tileTextures = { 
			new Texture("res/textures/tiles/straightRoadVert.png"),
			new Texture("res/textures/tiles/straightRoadHoriz.png"), 
			new Texture("res/textures/tiles/snowGrass.png")};

	private static int[][] tileMap = { 
			{ 2, 2, 0, 1, 2 }, 
			{ 2, 2, 0, 1, 2 }, 
			{ 2, 2, 0, 1, 2 }, 
			{ 2, 2, 0, 1, 2 },
			{ 2, 2, 0, 1, 2 } 
			};
	
	public MainMap() {
		super(tileTextures, tileMap);
	}

}
