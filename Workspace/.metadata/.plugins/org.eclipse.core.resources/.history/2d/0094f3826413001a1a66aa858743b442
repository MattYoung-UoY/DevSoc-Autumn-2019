package dejavu.engine.graphics;

import dejavu.Config;

public class Quad {
	
	int[] indices = {
			0, 1, 3,
			3, 1, 2
	};

	float[] texCoords = {
			0, 0,
			0, 1,
			1, 1,
			1, 0
	};
	
	private int vaoID, vertexCount = indices.length;
	
	public Quad() {
		
		System.out.println(MAP_TILE_SCALE);
		
		float[] vertices = new float[] {
				0f, Config.MAP_TILE_SCALE, 0f,
				0f, 0f, 0f,
				Config.MAP_TILE_SCALE, 0f, 0f,
				Config.MAP_TILE_SCALE, Config.MAP_TILE_SCALE, 0f
		};
		
		vaoID = Loader.loadToVAO(vertices, indices, texCoords);
	}

	public int getVaoID() {
		return vaoID;
	}

	public int getVertexCount() {
		return vertexCount;
	}
	
}
