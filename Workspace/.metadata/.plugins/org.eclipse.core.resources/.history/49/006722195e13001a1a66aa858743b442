package dejavu.engine.graphics;

import org.lwjgl.opengl.Display;

import kroy.game.Config;

public class Quad {
	
	int[] indices = {
			0, 1, 3,
			3, 1, 2
	};

	float[] texCoords = {
			0, 0,
			0, 1,
			1, 1,
			1, 0
	};
	
	private int vaoID, vertexCount = indices.length;
	
	public Quad() {
		float xTileSize = Config.X_UNIT;
		Config.Y_UNIT = (((float) Display.getWidth() / Display.getHeight()) * Config.X_UNIT);
		float yTileSize = Config.Y_UNIT;
		float[] vertices = new float[] {
				0, yTileSize, 0f,
				0, 0, 0f,
				xTileSize, 0, 0f,
				xTileSize, yTileSize, 0f
		};
		
		vaoID = Loader.loadToVAO(vertices, indices, texCoords);
	}

	public int getVaoID() {
		return vaoID;
	}

	public int getVertexCount() {
		return vertexCount;
	}
	
}
