package dejavu.game.map;

import dejavu.engine.graphics.Texture;

public class MainMap extends Map {

	private static Texture[] tileTextures = { 
			new Texture("res/textures/tiles/straightRoadVert.png"),
			new Texture("res/textures/tiles/straightRoadHoriz.png"), 
			new Texture("res/textures/tiles/grass.png"),
			new Texture("res/textures/tiles/flowers.png"), };

	private static int[][] tileMap = { 
			{ 3, 2, 0, 1, 3 }, 
			{ 3, 2, 3, 1, 3 }, 
			{ 3, 2, 0, 1, 3 }, 
			{ 3, 2, 0, 1, 3 },
			{ 3, 2, 0, 1, 3 } };
	
	public MainMap() {
		super(tileTextures, tileMap);
	}

}
