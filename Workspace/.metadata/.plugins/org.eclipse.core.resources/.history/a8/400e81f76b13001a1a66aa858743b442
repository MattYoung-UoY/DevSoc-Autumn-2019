package dejavu.game.shaders;

import dejavu.engine.shaders.ShaderProgram;

public class GuiShader extends ShaderProgram{

	private final static String VERTEX = "res/shaders/guis/vertex.glsl", 
			FRAGMENT = "res/shaders/guis/fragment.glsl";

	private int location_transformationMatrix;
	private int location_peojectionMatrix;
	
	public GuiShader() {
		super(VERTEX, FRAGMENT);
	}

	@Override
	protected void getAllUniformLocations() {
		
	}

	@Override
	protected void bindAttributes() {
		super.bindAttribute(0, "position");
		super.bindAttribute(1, "texCoords");
	}

}
